{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "src",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
