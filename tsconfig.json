{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2019",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
