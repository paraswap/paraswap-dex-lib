{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
